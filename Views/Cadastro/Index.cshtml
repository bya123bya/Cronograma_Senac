@model Usuario
@{
    Layout = "~/Views/Shared/_LayoutStart.cshtml";
}
<div class="header-logo">
    <img src="./img/senac.jpg" alt="Logo Senac" />
</div>
<div class="container-cadastro">
    <div class="card-cadastro">
        <h2 class="titulo">Criar Conta</h2>
        
        <form method="POST" asp-action="CadastrarUsuario" asp-controller="Cadastro">
            <div class="mb-3">
                <label>Tipo de usuário</label>
                <div class="input-icon">
                    <span class="icon"><i class="fas fa-user-tag"></i></span>
                    <select class="form-select" name="TipoUsuarioId" required />
                        <option>Selecione um tipo de usuário</option>
                        @foreach (TipoUsuario usuario in ViewBag.ListaTiposUsuarios)
                        {
                            <option value="@usuario.Id">@usuario.Tipo</option>
                        } 
                    </select>
                </div>
            </div>
            <div class="mb-3">
                <label for="nome">Nome do usuário</label>
                <div class="input-icon">
                    <span class="icon"><i class="far fa-user"></i></span>
                    <input type="text" name="Nome" placeholder="Seu nome de usuário" required />
                </div>
            </div>
            <div class="mb-3">
                <label for="Email">Email do usuário</label>
                <div class="input-icon">
                    <span class="icon"><i class="far fa-envelope"></i></span>
                    <input type="text" name="Email" placeholder="seu.email@exemplo.com" required />
 
                </div>
            </div>
            <div class="mb-3">
                <label for="Senha">Senha do usuário</label>
                <div class="input-icon">
                    <span class="icon"><i class="fas fa-key"></i></span>
                    <input type="Password" name="Senha" placeholder="********" required />
                    <span class="toggle-password" onclick="toggleSenha('senha')">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
            </div>
            <div class="mb-3">
                <label for="ConfirmarSenha">Confirmar Senha</label>
                <div class="input-icon">
                    <span class="icon"><i class="fas fa-key"></i></span>
                    <input type="Password" name="ConfirmarSenha" placeholder="********" required />
                    <span class="toggle-password" onclick="toggleSenha('confirmar')">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
            </div>
            
            <div class="d-flex justify-content-end gap-3 mt-4">
                <a href="/login" class="btn btn-secondary btn-cancelar">Cancelar</a>
                <button type="submit" class="btn btn-primary btn-criar">Criar Conta</button>
            </div>
        </form>
    </div>
</div>

<style>
    /* Estilos Gerais */
    body {
        background: #dfe3e8; 
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Posicionamento da Logo */
    .header-logo {
        position: absolute;
        top: 20px;
        left: 20px;
        z-index: 10;
    }
    .header-logo img {
        width: 130px;
        height: auto;
    }

    /* Centralização do Card */
    .container-cadastro {
        width: 100%;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        /* Alinhamento para que o card fique no meio da tela */
    }

    /* Estilo do Card (Conforme a imagem) */
    .card-cadastro {
        background: white;
        width: 430px;
        padding: 35px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .titulo {
        text-align: center;
        color: #1a4d92;
        font-size: 26px; 
        font-weight: 700;
        margin-bottom: 25px;
    }
    
    /* Estilo dos Inputs (Bootstrap Customizado) */
    .form-label {
        font-weight: 500;
        color: #333;
        margin-bottom: 4px;
    }

    .form-group {
        margin-bottom: 18px;
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .form-group label {
        font-size: 14px;
        color: #555;
        margin-bottom: 5px;
        font-weight: bold;
    }

    /* Input com Ícones (Input Group) */
    .input-group .form-control {
        border-left: none; /* Remove a borda esquerda para integrar com o ícone */
        z-index: 1; /* Garante que o input fique na frente */
    }

    .form-group input,
    .form-group select {
        padding: 10px 12px;
        border: 1px solid #ccc;
        border-radius: 6px;
        width: 100%;
        font-size: 14px;
    }

    .link-esqueci {
        font-size: 12px;
        color: #174a8f;
        text-decoration: none;
        display: block;
        margin-bottom: 20px;
    }

    .input-group .form-control {
        border-radius: 0 8px 8px 0; /* Arredondamento na direita do input */
    }

    .input-group:focus-within .icon-addon {
        border-color: #174a8f;
    }
    
    /* Botões */
    .btn-cancelar {
        background-color: #f1f3f5 !important;
        color: #495057 !important;
        border: none !important;
        padding: 10px 40px;
        border-radius: 8px;
        font-weight: 600;
    }
    
    .btn-criar {
        /* Cor laranja do Senac */
        background-color: #ff8800 !important;
        border: none !important;
        padding: 10px 38px;
        border-radius: 8px;
        font-weight: 600;
    }

    .btn-criar:hover {
        background-color: #e57700 !important;
        border-color: #e57700 !important;
    }

    .input-icon {
        position: relative;
        display: flex;
        align-items: center;
    }

    .input-icon .icon {
        position: absolute;
        left: 12px;
        color: #ff8500 !important;
        font-size: 16px;
    }

    .input-icon input,
    .input-icon select {
        width: 100%;
        padding: 10px 14px 10px 40px;
        /* espaço para o ícone */
        border: 1px solid #bfc5cc;
        border-radius: 8px;
        font-size: 14px;
    }

    /* Ícone do olho para mostrar/ocultar senha */
    .toggle-password {
        position: absolute;
        right: 12px;
        cursor: pointer;
        color: #ff8500 !important;
    }

    .toggle-password:hover {
        color: #333;
    }
    .mb-3 {
    margin-bottom: 14px !important;
}
</style>
