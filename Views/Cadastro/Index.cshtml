@model Usuario
@{
    Layout = "~/Views/Shared/_LayoutStart.cshtml";
}
<div class="header-logo">
    <img src="./img/senac.jpg" alt="Logo Senac" />
</div>
<div class="container-cadastro">
    <div class="card-cadastro">
        <h2 class="titulo">Criar Conta</h2>
        @*Formulário de cadastro de Usuario*@
        <form method="POST" asp-action="CadastrarUsuario" asp-controller="Cadastro">
            <div class="mb-3">
                <label>Tipo de usuário</label>
                <div class="input-icon">
                    <span class="icon"><i class="fas fa-user-tag"></i></span>
                    <select class="form-select" name="TipoUsuarioId">
                        <option>Selecione um tipo de usuário</option>
                        @foreach (TipoUsuario usuario in ViewBag.ListaTiposUsuarios)
                        {
                            <option value="@usuario.Id">@usuario.Tipo</option>
                        }
                    </select>
                </div>
            </div>
            <div class="mb-3">
                    <span class="icon"><i class="far fa-user"></i></span>
                <label for="nome">Nome do usuário</label>
                <div class="input-icon">
                    <span class="icon"><i class="far fa-user"></i></span>
                    <input type="text" name="Nome">
                </div>
            </div>
            <div class="mb-3">
                <label for="Email">Email do usuário</label>
                <div class="input-icon">
                    <span class="icon"><i class="fas fa-user"></i></span>
                    <input type="text" name="Email">
                </div>
            </div>
            <div class="mb-3">
                <label for="Senha">Senha do usuário</label>
                <div class="input-icon">
                    <span class="icon"><i class="fas fa-key"></i></span>
                    <input type="Password" name="Senha">
                    <span class="toggle-password" onclick="toggleSenha('senha')">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
            </div>
            <div class="mb-3">
                <label for="ConfirmarSenha">Confirmar Senha</label>
                <div class="input-icon">
                    <span class="icon"><i class="fas fa-key"></i></span>
                    <input type="Password" name="ConfirmarSenha" required />
                    <span class="toggle-password" onclick="toggleSenha('confirmar')">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
            </div>
            <div class="botoes">
                <button type="button" class="btn-cancelar">Cancelar</button>
                <button type="submit" class="btn-criar">Criar Conta</button>
            </div>
        </form>
    </div>
</div>
<style>
    .header-logo {
        position: absolute;
        top: 20px;
        left: 20px;
        z-index: 10;
        /* Garante que o logo fique acima de outros elementos */
    }

    .header-logo img {
        width: 130px;
        /* Define o tamanho da imagem menor */
        height: auto;
    }

    body {
        background: #dcdfe4;
        font-family: Arial, sans-serif;
    }

    .container-cadastro {
        width: 100%;
        min-height: calc(100vh - 40px);
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 40px;
    }

    .card-cadastro {
        background: white;
        width: 430px;
        padding: 35px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .titulo {
        text-align: center;
        color: #174a8f;
        font-size: 26px;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 18px;
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .form-group label {
        font-size: 14px;
        color: #555;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .form-input {
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        width: 100%;
    }

    .form-group input,
    .form-group select {
        padding: 10px 12px;
        border: 1px solid #ccc;
        border-radius: 6px;
        width: 100%;
        font-size: 14px;
    }

    .link-esqueci {
        font-size: 12px;
        color: #174a8f;
        text-decoration: none;
        display: block;
        margin-bottom: 20px;
    }

    .botoes {
        display: flex;
        justify-content: space-between;
    }

    .btn-cancelar {
        background: #f0f0f0;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-criar {
        background: #ff8500;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-criar:hover {
        background: #e57700;
    }

    .input-icon {
        position: relative;
        display: flex;
        align-items: center;
    }

    .input-icon .icon {
        position: absolute;
        left: 12px;
        color: #777;
        font-size: 16px;
    }

    .input-icon input,
    .input-icon select {
        width: 100%;
        padding: 10px 12px 10px 38px;
        /* espaço para o ícone */
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 14px;
    }

    /* Ícone do olho para mostrar/ocultar senha */
    .toggle-password {
        position: absolute;
        right: 12px;
        cursor: pointer;
        color: #777;
    }

    .toggle-password:hover {
        color: #333;
    }
</style>