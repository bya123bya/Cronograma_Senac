@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb" class="mt-3">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item">
                        <a href="#" class="text-decoration-none">Senac Itaquera</a>
                    </li>
                    <li class="breadcrumb-item d-flex align-items-center">
                        <!-- separador ">" -->
                        <i class="fa-solid fa-chevron-right mx-2" aria-hidden="true"></i>
                        <a href="#" class="text-decoration-none">Cursos</a>
                        <!-- estrela ao lado -->
                        <i class="fa-solid fa-star ms-2 text-warning" title="Favorito" aria-hidden="true"></i>
                    </li>
                </ol>
            </nav>

            <!-- Bloco visual idêntico ao da imagem -->
            <div class="visual-header">
                <div class="d-flex justify-content-between align-items-center">

                    <!-- Grupo de botões + dropdowns -->
                    <div class="d-flex align-items-center flex-wrap">

                        <div class="btn-group" role="group" aria-label="visualizações">
                            <button type="button" class="btn btn-outline-primary active">
                                <i class="fa-solid fa-list me-2"></i> Lista
                            </button>

                            <button type="button" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-table-cells-large me-2"></i> Painel
                            </button>

                            <button type="button" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-calendar-days me-2"></i> Calendário
                            </button>

                            <button type="button" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-table me-2"></i> Tabela
                            </button>

                            <button type="button" class="btn btn-outline-secondary">
                                <i class="fa-regular fa-eye me-2"></i> Visualização
                            </button>
                        </div>

                        <!-- espaçamento entre grupos -->
                        <div class="d-flex align-items-center ms-3">
                            <button type="button" class="btn btn-outline-secondary dropdown-toggle me-2">
                                <i class="fa-solid fa-filter-list me-2"></i> Grupo: Status
                            </button>

                            <button type="button" class="btn btn-outline-secondary dropdown-toggle me-2">
                                <i class="fa-solid fa-layer-group me-2"></i> Subtarefas
                            </button>

                            <button type="button" class="btn btn-outline-secondary dropdown-toggle">
                                <i class="fa-solid fa-table-columns me-2"></i> Colunas
                            </button>
                        </div>
                    </div>
                    <div>
                        <button type="button" class="btn btn-primary">
                            + Add Turma
                        </button>
                    </div>
                </div>
            </div>
            <h2 class="mb-3">Turmas</h2>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th>Aulas</th>
                            <th class="col-center">Total de Aulas</th>
                            <th>Docente</th>
                            <th>Data</th>
                            <th>CH</th>
                            <th class="col-center">Lançamento SS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.ListaUcs != null && ViewBag.ListaUcs.Count > 0)
                        {
                            @foreach (var tm in ViewBag.ListaUcs)
                            {
                                <tr class="group-row">
                                    <td colspan="8">
                                        <span class="badge bg-primary rounded-pill px-3 py-2">@tm?.Nome</span>
                                    </td>
                                </tr>

                                @if (tm?.TurmaUcs != null && tm?.TurmaUcs.Count > 0)
                                {
                                    @foreach (var ucs in tm.TurmaUcs)
                                    {
                                        <tr>
                                            <td>@ucs.Uc?.Nome</td>
                                            <td>
                                                <select class="form-select" aria-label="Default select example">
                                                    @for (int i = 0; i <= @ucs.Uc?.QtsAulas; i++)
                                                    {
                                                        <option value="@i">Aula - @i</option>
                                                    }
                                                </select>
                                            <td class="col-center">@ucs.Uc?.QtsAulas</td>

                                            <td>@ucs.Turma?.UsuarioTurmas?[0].Usuario?.Nome</td>
                                            <td>@ucs.Uc?.DataInicio</td>
                                            <td>@ucs?.CargaHoraria</td>

                                            <!-- AQUI centraliza o checkbox -->
                                            <td class="col-center">
                                                <input type="checkbox" />
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        }
                        <tr class="add-uc-row">
                            <td colspan="8">
                                <button type="button" class="btn w-100 text-start py-2 add-uc-button"
                                    data-bs-toggle="modal" data-bs-target="#modalAdicionarUC">
                                    <i class="bi bi-plus-lg me-2"></i>+ Adicionar UC
                                </button>
                            </td>
                        </tr>

                    </tbody>
                    <!-- MODAL ADICIONAR UC -->
                    <div class="modal fade" id="modalAdicionarUC" tabindex="-1" aria-labelledby="modalAdicionarUCTitle"
                        aria-hidden="true">
                        <div class="modal-dialog modal-lg modal-dialog-centered">
                            <div class="modal-content">

                                <div class="modal-header" style="background:#004A8D; color:white;">
                                    <h5 class="modal-title" id="modalAdicionarUCTitle">Adicionar UC</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>

                                <div class="modal-body p-4">
                                    <form asp-action="CadastrarUC" asp-controller="Cadastro" method="post">

                                        <div class="row g-3">

                                            <!-- Nome -->
                                            <div class="col-md-6">
                                                <label class="form-label fw-bold">Nome</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                                    <input type="text" name="Nome" class="form-control"
                                                        placeholder="Nome da UC/Registro" required>
                                                </div>
                                            </div>

                                            <!-- Data da Aula -->
                                            <div class="col-md-6">
                                                <label class="form-label fw-bold">Data da Aula</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i
                                                            class="bi bi-calendar-date"></i></span>
                                                    <input type="date" name="DataAula" class="form-control" required>
                                                </div>
                                            </div>

                                            <!-- Quantidade de Aulas -->
                                            <div class="col-md-6">
                                                <label class="form-label fw-bold">Quantidade de Aulas</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-list-ol"></i></span>
                                                    <input type="number" min="1" name="QtsAulas" class="form-control"
                                                        placeholder="Ex: 4" required>
                                                </div>
                                            </div>

                                            <!-- Hora Chegada -->
                                            <div class="col-md-6">
                                                <label class="form-label fw-bold">Hora de Chegada</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-alarm"></i></span>
                                                    <input type="time" name="HoraChegada" class="form-control" required>
                                                </div>
                                            </div>

                                            <!-- Hora Saída -->
                                            <div class="col-md-6">
                                                <label class="form-label fw-bold">Hora de Saída</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i
                                                            class="bi bi-alarm-fill"></i></span>
                                                    <input type="time" name="HoraSaida" class="form-control" required>
                                                </div>
                                            </div>

                                            <!-- Lançamento -->
                                            <div class="col-md-6 d-flex align-items-end">
                                                <div class="form-check" style="padding-left: 2rem;">
                                                    <input class="form-check-input" type="checkbox"
                                                        id="lancamentoCheck">
                                                    <label class="form-check-label fw-bold" for="lancamentoCheck">
                                                        Lançamento SS Feito?
                                                    </label>
                                                </div>
                                            </div>

                                            <!-- Data Início -->
                                            <div class="col-md-6">
                                                <label class="form-label fw-bold">Data Início</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i
                                                            class="bi bi-calendar-event"></i></span>
                                                    <input type="date" name="DataInicio" class="form-control" required>
                                                </div>
                                            </div>

                                            <!-- Data Fim -->
                                            <div class="col-md-6">
                                                <label class="form-label fw-bold">Data Fim</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i
                                                            class="bi bi-calendar-check"></i></span>
                                                    <input type="date" name="DataFim" class="form-control" required>
                                                </div>
                                            </div>

                                            <!-- Turma -->
                                            <div class="col-md-12">
                                                <label class="form-label fw-bold">Turma</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-people"></i></span>
                                                    <select class="form-select" name="TurmaId" required>
                                                        <option value="">Selecione uma turma</option>
                                                        @foreach (var t in ViewBag.ListaTurmas)
                                                        {
                                                            <option value="@t.Id">@t.Nome</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>

                                        </div>

                                        <!-- Botões -->
                                        <div class="text-end mt-4">
                                            <button type="button" class="btn btn-secondary px-4"
                                                data-bs-dismiss="modal">
                                                Cancelar
                                            </button>
                                            <button type="submit" class="btn"
                                                style="background:#F7941D; color:white; font-weight:bold;">
                                                Salvar
                                            </button>
                                        </div>

                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>

                </table>
            </div>
        </div>
    </div>
</div>