@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid">
    <div class="row">
        <!-- Main Content -->
        <main>
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mt-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">#Senac Itaquera</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Cursos</li>
                </ol>
            </nav>

            <!-- Toolbar -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="btn-group">
                    <button class="btn btn-outline-secondary">Lista</button>
                    <button class="btn btn-outline-secondary">Painel</button>
                    <button class="btn btn-outline-secondary">Calendário</button>
                    <button class="btn btn-outline-secondary">Tabela</button>
                    <button class="btn btn-outline-secondary">Visualização</button>
                </div>
                <button class="btn btn-primary">+ Add Turma</button>
            </div>

            <!-- Table -->
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th>Aulas</th>
                            <th>Total de Aulas</th>
                            <th>Docente</th>
                            <th>Data</th>
                            <th>CH</th>
                            <th>Lançamento SS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <h1>asdasd @ViewBag.ListaUcs.Count</h1>
                        @if (ViewBag.ListaUcs != null && ViewBag.ListaUcs.Count > 0)
                        {
                            @foreach (var uc in ViewBag.ListaUcs)
                            {
                                <tr class="group-row">
                                    <td colspan="8">
                                        <span class="badge bg-primary rounded-pill px-3 py-2">@uc?.Nome</span>
                                    </td>
                                </tr>

                                @if (uc?.TurmaUcs != null && uc?.TurmaUcs.Count > 0)
                                {
                                    @foreach (var turmas in uc.TurmaUcs)
                                    {
                                        <tr>
                                            <td>@turmas.Turma?.Nome</td>
                                            <td>
                                                <select class="form-select" aria-label="Default select example">
                                                    @for (int i = 0; i <= @turmas.Turma?.QtsAulas; i++)
                                                    {
                                                        <option value="@i">Aula - @i</option>
                                                    }
                                                </select>
                                            </td>
                                            <td>@turmas.Turma?.QtsAulas</td>
                                            <td>@turmas.Turma?.UsuarioTurmas?[0].Usuario?.Nome</td>
                                            <td>20/05/2024</td>
                                            <td>@turmas.CargaHoraria</td>
                                            <td><input type="checkbox" /></td>
                                        </tr>
                                    }
                                }
                            }
                        }
                        <!-- Botão para adicionar UC -->
                        <tr class="add-uc-row">
                            <td colspan="8">
                                <button type="button" class="btn w-100 text-start py-2" data-bs-toggle="modal"
                                    data-bs-target="#modalAdicionarUC"
                                    style="background-color: transparent; border: none; color: #0d6efd; font-weight: 500;">
                                    <i class="bi bi-plus-lg me-2"></i>+ Adicionar UC
                                </button>
                            </td>
                        </tr>

                    </tbody>
                    <div class="modal fade" id="modalAdicionarUC" tabindex="-1" aria-labelledby="modalAdicionarUCTitle"
                        aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">

                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalAdicionarUCTitle">Adicionar UC</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>

                                <div class="modal-body">
                                    <!-- Aqui você coloca os campos de adicionar UC -->
                                    <form asp-action="CadastrarUC" asp-controller="Cadastro">
                                        <!-- Nome da UC -->
                                        <div class="mb-3">
                                            <label for="nomeUC" class="form-label">Nome da UC</label>
                                            <div class="input-icon d-flex align-items-center">
                                                <span class="icon"><i class="far fa-file-alt"></i></span>
                                                <input type="text" id="nomeUC" name="NomeUC" class="form-control"
                                                    placeholder="Digite o nome da UC" required />
                                            </div>
                                        </div>
                                        <!-- Quantidade de Aulas -->
                                        <div class="mb-3">
                                            <label for="qtdAulas" class="form-label">Quantidade de Aulas</label>
                                            <div class="input-icon d-flex align-items-center">
                                                <span class=" icon"><i class="far fa-list-ol"></i></span>
                                                <input type="number" id="qtdAulas" name="QuantidadeAulas"
                                                    class="form-control" min="1" placeholder="Ex: 5" required />
                                            </div>
                                        </div>


                                        <!-- Turma (NOVO) -->
                                        <div class="mb-3">
                                            <label for="turma" class="form-label">Turma</label>
                                            <select class="form-select" id="turma" name="TurmaId" required>
                                                <option value="">Selecione uma turma</option>
                                                @foreach (var t in ViewBag.ListaTurmas)
                                                {
                                                    <option value="@t.Id">@t.Nome</option>
                                                }
                                            </select>
                                        </div>
                                        <!-- Botões -->
                                        <div class="text-end mt-3">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Cancelar</button>
                                            <button type="submit" class="btn btn-primary">Cadastrar UC</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </table>
            </div>
        </main>
    </div>
</div>