<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CronogramaSenac</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <nav id="sidebarMenu" class="sidebar">
        <div class="sidebar-sticky">
            <div class="sidebar-logo-container">
                <img src="./img/senac.jpg" alt="Logo Senac" class="sidebar-logo" />
            </div>

            <div class="p-3">
                <button class="btn btn-primary w-100">
                    <i class="fas fa-plus me-2"></i> Criar
                </button>
            </div>
            
            <ul class="nav flex-column mt-3">
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-home me-2"></i> Início</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-users me-2"></i> Coordenadores</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-book me-2"></i> Cursos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-calendar-alt me-2"></i> Turmas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="#"><i class="fas fa-graduation-cap me-2"></i> Disciplinas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-ellipsis-h me-2"></i> Mais</a>
                </li>
            </ul>
        </div>
    </nav>
    
    <nav class="navbar navbar-expand-lg navbar-light fixed-top navbar-top">
        <div class="container-fluid">
            
            <div class="d-flex align-items-center w-100">
                <a class="navbar-brand me-4" href="#">CronogramaSenac</a> 
                
                <div class="input-group search-bar">
                    <input type="text" class="form-control" placeholder="Pesquisar Ctrl K" aria-label="Pesquisar">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                </div>
            </div>

            <div class="d-flex ms-auto align-items-center">
                <i class="far fa-bell fa-lg text-secondary mx-3 d-none d-md-block user-icon" style="cursor: pointer;"></i>
                <i class="fas fa-cog fa-lg text-secondary mx-3 d-none d-md-block user-icon" style="cursor: pointer;"></i>

                <div class="d-flex align-items-center user-profile ms-2">
                    <div class="me-2 text-end d-none d-lg-block">
                        <span class="user-name">Jennifer Vitória de Lima</span>
                        <small class="d-block user-title">Coordenadora</small>
                    </div>
                    <img src="./img/perfil.jpg" alt="Perfil" class="rounded-circle profile-img" />
                </div>
            </div>
        </div>
    </nav>
    
    <main role="main">
        <div class="p-4"> 
            @RenderBody()
        </div>
    </main>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>