<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CronogramaSenac</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

    <nav id="sidebarMenu" class="sidebar">
        <div class="sidebar-sticky">
            <div class="sidebar-logo-container">
                <img src="./img/senac.jpg" alt="Logo Senac" class="sidebar-logo" />
            </div>

            <div class="p-3">
                <button class="btn btn-primary w-100">
                    <i class="fas fa-plus me-2"></i> Criar
                </button>
            </div>

            <ul class="nav flex-column mt-3">
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-home me-2"></i> Início</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-users me-2"></i> Coordenadores</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-book me-2"></i> Cursos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="#"><i class="fas fa-calendar-alt me-2"></i> Turmas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-graduation-cap me-2"></i> Disciplinas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-ellipsis-h me-2"></i> Mais</a>
                </li>
            </ul>
        </div>
    </nav>

    <nav class="navbar navbar-expand-lg navbar-light fixed-top navbar-top">
        <div class="container-fluid">

            <!-- Nome do sistema (esquerda) -->
            <a class="navbar-brand me-4" href="#">CronogramaSenac</a>

            <!-- Barra de Pesquisa (centro) -->
            <div class="nav-search-container">
                <div class="topbar">
                    <div class="search-area">
                        <input type="text" placeholder="Pesquisar Ctrl K">
                    </div>
                </div>

                <!-- Ícones e Perfil (direita) -->
                <div class="actions-area">
                    <i class="fa-regular fa-bell"></i>
                    <i class="fa-solid fa-gear"></i>
                </div>
                <div class="profile">
                    <div class="profile-info">
                        <span class="profile-name">Vitória de Lima</span>
                        <span class="profile-role">Coordenadora</span>
                    </div>
                    <img src="./img/perfil.jpg" alt="Perfil" class="rounded-circle profile-img" />
                </div>
            </div>
    </nav>


    <main role="main">
        <div class="p-4">
            @RenderBody()
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>