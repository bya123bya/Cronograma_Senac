<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CronogramaSenac</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/solid.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/regular.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/fontawesome.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CronogramaSenac.styles.css" asp-append-version="true" />
</head>

<body style="height: 100vh;">
    <section class="row justify-content-start align-item-start cols h-100">

        @* Menu a esquerda *@
        <nav class="col-md-2 d-none d-md-block bg-light sidebar col-2 px-0">
            <div class="sidebar-sticky">
                <button class="btn btn-primary w-100 mb-3">+ Criar</button>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active"><i class="fa-regular fa-house"></i> Início </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active"><i class="fa-regular fa-user"></i> Coordenadores </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active"> Cursos </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active"> Turmas </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">Mais</a>
                    </li>
                </ul>
            </div>
        </nav>

        <section class="col align-items-start justify-content-start p-0">
            <header class>
                <nav
                    class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 px-0">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CronogramaSenac</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                        asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                        asp-action="Privacy">Privacy</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </section>

    </section>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/fontawesome/js/all.js"></script>
    <script src="~/lib/fontawesome/js/fontawesome.js"></script>
    <script src="~/lib/fontawesome/js/regular.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>